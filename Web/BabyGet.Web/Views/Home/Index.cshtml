@using BabyGet.Common
@model BabyGet.Web.ViewModels.Home.IndexViewModel
@{
    this.ViewData["Title"] = "Home Page";
}

<div class="text-center row">
    <h1 class="display-4">Welcome to @GlobalConstants.SystemName!</h1>

    <div class="col-md-4">
        <div class="row">
        @foreach (var item in this.Model.RandomItems)
        {
            <div class="card col-md-6">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.CategoryName</p>
                    <a asp-controller="Items" asp-action="ById" asp-route-id="@item.Id" class="btn btn-primary">Go to item</a>
                </div>
            </div>
        }
         </div>
    </div>
    <div class="col-md-4">
        <p>We have:</p>
        <ul class="list-group">
            <li class="list-group-item bg-info">Items: @Model.ItemsCount</li>
            <li class="list-group-item bg-light">Categories: @Model.CategoriesCount</li>
        </ul>
    </div>
    @* <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
</div>



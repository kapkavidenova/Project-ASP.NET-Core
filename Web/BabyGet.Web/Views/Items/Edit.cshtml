@model BabyGet.Web.ViewModels.Items.EditItemInputModel
@{
    ViewData["Title"] = "Edit item";
    var categoryItems = this.Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}
<h1>@ViewData["Title"]</h1>

<form method="post" id="editForm">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea> 
        <span asp-validation-for="Description" class="text-danger"></span>
     </div>
    <div class="form-group">
        <label asp-for="ForWeight"></label>
        <input asp-for="ForWeight" class="form-control" />
        <span asp-validation-for="ForWeight" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="categoryItems" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <hr />
    <input type="hidden" asp-for="Id" />
</form>
   <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modalEdit">Save changes</button>
